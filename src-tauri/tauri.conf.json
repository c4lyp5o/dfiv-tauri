{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "Damn Fast Media Viewer",
	"version": "1.0.0",
	"identifier": "com.c4lyp5o.dfmv",
	"build": {
		"beforeDevCommand": "bun run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "bun run build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"title": "Damn Fast Media Viewer",
				"width": 1280,
				"height": 720
			}
		],
		"security": {
			"csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost",
			"assetProtocol": {
				"enable": true,
				"scope": ["**"]
			}
		}
	},
	"plugins": {
		"sql": {
			"preload": ["sqlite:dfiv.db"]
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
